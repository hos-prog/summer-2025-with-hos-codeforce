t = int(input())
for _ in range(t):
    n = int(input())
    a = list(map(int, input().split()))


    if sorted(a) != a:
        print(0)
    else:
        
        min_diff = a[1] - a[0]
        for i in range(1, n-1):
            min_diff = min(min_diff, a[i+1] - a[i])
        print(min_diff // 2 + 1)