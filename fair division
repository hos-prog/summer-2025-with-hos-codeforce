#HosamaAdem
t = int(input())

for _ in range(t):
    n = int(input())
    a = list(map(int, input().split()))
    c1 = a.count(1)
    c2 = a.count(2)

    total_weight = (c1 * 1) + (c2 * 2)

    if total_weight % 2 != 0:
        print("NO")
    else:
        half = total_weight // 2
        if half % 2 == 0:
            print("YES")
        else:
            if c1 > 0:
                print("YES")
            else:
                print("NO")
