#hos
t=int(input())
for _ in range(t):
    a,b=map(int,input().split())
    count=0
    if a==b:
        count=0
    elif a<b:
        c=b-a
        if c%2==1:
            count=1
        else:
            count=2
    elif a>b:
        c=a-b
        if c%2==0:
            count=1
        else:
            count=2
    print(count)                        