#hos
t = int(input())
for _ in range(t):
    n=int(input())
    a=list(map(int,input().split()))
    odd=0
    even=0
    if len(a)%2!=0:
        print(-1)
    else:
        for I in a:
            if I %2==0:
                even+=1
            else:
                odd+=1
        if odd==even:
            print(0)        
        else:
            print(abs(even-odd)//2)                
            