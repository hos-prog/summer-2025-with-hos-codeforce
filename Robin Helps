# Robin Helps

t = int(input())  # number of test cases
for _ in range(t):
    n, k = map(int, input().split())
    a = list(map(int, input().split()))
    
    robin_gold = 0
    count = 0
    
    for gold in a:
        if gold >= k:
            robin_gold += gold
        elif gold == 0 and robin_gold > 0:
            robin_gold -= 1
            count += 1
    
    print(count)